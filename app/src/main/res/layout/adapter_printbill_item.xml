<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/printbill_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_none_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/printbill_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="San pham"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp"
                android:gravity="left|center_vertical"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_2sdp" />

            <TextView
                android:id="@+id/printbill_item_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="1"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_12sdp"
                android:gravity="right"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_2sdp" />


            <TextView
                android:id="@+id/printbill_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:text="San pham"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_12sdp"
                android:gravity="right"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_2sdp" />

            <TextView
                android:id="@+id/printbill_item_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp"
                android:gravity="right"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_2sdp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/item_seperateline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0d000000"
        android:layout_alignParentBottom="true" />

</RelativeLayout>