<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statistical_bills_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/btn_none_white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp">

        <View
            android:id="@+id/statistical_bills_item_upper"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:layout_above="@+id/statistical_bills_item_number"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/statistical_bills_item_number"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:background="@drawable/btn_oval_denim"
            android:textColor="@color/colorWhite"
            android:text="0"
            android:textSize="@dimen/_8sdp"
            android:gravity="center"
            android:layout_centerVertical="true" />

        <View
            android:id="@+id/statistical_bills_item_under"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:layout_below="@+id/statistical_bills_item_number"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <View
        android:id="@+id/statistical_bills_item_line"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="#e5e5e5"
        android:layout_gravity="center_vertical" />

