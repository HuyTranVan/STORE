    <!--android:text="Default"-->
    <!--android:textColor="@color/black_text_color_hint"-->
    <!--android:textSize="@dimen/_7sdp" />-->

    <!---->

    <!--<TextView-->
    <!--android:id="@+id/statistical_bills_item_hour"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/statistical_bills_item_line"-->
    <!--android:gravity="right"-->
    <!--android:paddingRight="@dimen/_2sdp"-->
    <!--android:text="Default"-->
    <!--android:textColor="@color/black_text_color_hint"-->
    <!--android:textSize="@dimen/_7sdp" />-->

    <!--</RelativeLayout>-->


    <LinearLayout
        android:id="@+id/statistical_bills_item_content_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_corner5_white_border_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_2topcorner5_lightgrey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statistical_bills_item_signboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.5"
                    android:padding="@dimen/_2sdp"
                    android:singleLine="true"
                    android:text="a"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/statistical_bills_item_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:padding="@dimen/_2sdp"
                    android:singleLine="true"
                    android:text="a"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/_5sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statistical_bills_item_istemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_10sdp"
                    android:background="@drawable/btn_round_grey"
                    android:text="Hóa đơn chưa giao"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/colorWhite"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/statistical_bills_item_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="nhan vien"
                    android:textColor="@color/black_text_color_hint"
                    android:textSize="@dimen/_7sdp"
                    android:textStyle="italic" />

            </LinearLayout>


        </LinearLayout>


        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="#e5e5e5" />-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/statistical_bills_item_rvproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:clipToPadding="true"
            android:paddingBottom="@dimen/_5sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:weightSum="3">

            <TextView
                android:id="@+id/statistical_bills_item_debt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Default"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/statistical_bills_item_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Default"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/statistical_bills_item_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Default"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/statistical_bills_item_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner5_lighgrey"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp" />


    </LinearLayout>

</LinearLayout>
