<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_pay_method_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner5_white"
    tools:ignore="WebViewLayout"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/choice_4method_parent1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?selectableItemBackground">

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/choice_4method_icon1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:gravity="center"
            android:text="@string/icon_product"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/choice_4method_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="Item 1"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#e0e0e0" />

    <LinearLayout
        android:id="@+id/choice_4method_parent2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="?selectableItemBackground">

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/choice_4method_icon2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:gravity="center"
            android:text="@string/icon_product"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/choice_4method_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="Item 2"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical"
            android:clickable="false" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#e0e0e0" />

    <LinearLayout
        android:id="@+id/choice_4method_parent3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="?selectableItemBackground">

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/choice_4method_icon3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:gravity="center"
            android:text="@string/icon_product"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/choice_4method_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="Item 3"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical"
            android:clickable="false" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#e0e0e0" />

    <LinearLayout
        android:id="@+id/choice_4method_parent4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="?selectableItemBackground">

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/choice_4method_icon4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:gravity="center"
            android:text="@string/icon_product"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/choice_4method_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="Item 4"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical"
            android:clickable="false" />

    </LinearLayout>

</LinearLayout>

