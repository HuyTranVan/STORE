    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <RadioGroup
            android:id="@+id/statistical_cash_totalgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp">


            <RadioButton
                android:id="@+id/statistical_cash_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tong cong"
                android:paddingLeft="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_text_color"
                android:backgroundTint="@color/black_text_color_hint"
                android:buttonTint="@color/black_text_color_hint" />

            <RadioButton
                android:id="@+id/statistical_cash_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tong cong"
                android:paddingStart="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorBlue"
                android:checked="true"
                android:backgroundTint="@color/colorBlue"
                android:buttonTint="@color/colorBlue"
                android:layout_marginLeft="@dimen/_20sdp" />

        </RadioGroup>

    </LinearLayout>

    <View
        android:id="@+id/statistical_product_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#e5e5e5" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/statistical_cash_rvbill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_50sdp" />

</LinearLayout>