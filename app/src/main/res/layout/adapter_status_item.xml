<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status_item_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_none_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/status_item_icon_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_protect"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorBlue"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/status_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_toRightOf="@+id/status_item_icon_default" />

        <TextView
            android:id="@+id/status_item_color"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@color/colorRed"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp" />

    </RelativeLayout>


    <View
        android:id="@+id/productgroup_item_seperateline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#0d000000" />

</LinearLayout>