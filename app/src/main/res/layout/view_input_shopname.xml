<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_shopnname_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:background="@color/colorWhite">


        <Spinner
            android:id="@+id/input_shopnname_shoptype"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:background="@color/colorWhite" />


        <EditText
            android:id="@+id/input_shopnname_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:background="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black_text_color"
            android:inputType="textCapWords"
            android:hint="Nhập tên cửa hàng"
            android:textColorHint="@color/black_text_color_hint"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:layout_marginLeft="@dimen/_5sdp" />


        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/input_shopnname_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/icon_next_circle"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_20sdp"
            android:gravity="center" />


    </LinearLayout>

</androidx.cardview.widget.CardView>







