<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/printbill_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_none_white"
    android:paddingTop="@dimen/_5sdp">

    <TextView
        android:id="@+id/debt_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:text="San pham"
        android:textColor="@color/black_text_color"
        android:textSize="@dimen/_12sdp"
        android:gravity="left|center_vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_below="@+id/debt_item_date"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nợ:"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_5sdp" />

            <TextView
                android:id="@+id/debt_item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_vertical" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn:"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_5sdp" />

            <TextView
                android:id="@+id/debt_item_remain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_10sdp"
                android:gravity="bottom" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trả:"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_5sdp" />

            <TextView
                android:id="@+id/debt_item_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textColor="@color/colorBlueDark"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0d000000"
        android:layout_alignParentBottom="true" />

</RelativeLayout>