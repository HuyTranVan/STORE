<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_home_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:background="@drawable/btn_transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/item_home_icon"
            android:fontFamily="@font/font_awesome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/black_text_color_hint"
            android:text="@string/icon_camera"
            android:gravity="center" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_home_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/float_transparent"
            android:src="@drawable/ic_user"
            android:layout_centerInParent="true"
            android:tint="@color/black_text_color_hint"
            app:civ_border_width="1dip"
            app:civ_border_overlay="false"
            app:civ_fill_color="@color/colorWhite"
            app:civ_border_color="@color/colorLightGrey"
            android:visibility="gone"/>

    </RelativeLayout>



    <TextView
        android:id="@+id/item_home_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="Bán hàng"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black_text_color"
        android:textSize="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>