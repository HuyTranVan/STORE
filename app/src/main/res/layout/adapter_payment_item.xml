<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/printbill_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/payment_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="San pham"
            android:textSize="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp" />

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/payment_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textSize="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/_5sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/payment_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="x6"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/payment_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/icon_delete"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black_text_color_hint" />
    </LinearLayout>


</RelativeLayout>