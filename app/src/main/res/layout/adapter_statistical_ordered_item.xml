<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statistical_ordered_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/statistical_ordered_item_number"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@drawable/btn_oval_blue"
        android:textColor="@color/colorWhite"
        android:text="0"
        android:textSize="@dimen/_8sdp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/statistical_ordered_item_number"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statistical_ordered_item_signboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="a"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black_text_color"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/statistical_ordered_item_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_awesome"
                    android:gravity="center_vertical"
                    android:text="nhan vien"
                    android:textColor="@color/black_text_color_hint"
                    android:textSize="@dimen/_8sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp" />

            </LinearLayout>


            <TextView
                android:id="@+id/statistical_ordered_item_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/_10sdp">

            <TextView
                android:id="@+id/statistical_ordered_item_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorRed" />

            <TextView
                android:id="@+id/statistical_ordered_item_last_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:text="date" />


        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/statistical_ordered_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f1f1f1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_5sdp" />


</RelativeLayout>