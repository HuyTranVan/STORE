<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:id="@+id/map_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:fitsSystemWindows="true">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/map_new_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:menu_fab_size="normal"
        fab:menu_colorNormal="#1565C0"
        fab:menu_colorPressed="#2272CD"
        fab:menu_colorRipple="#62B2FF"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_90sdp"
        app:layout_anchor="@id/map_current_location"
        app:layout_anchorGravity="top|end">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/map_new_addphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_local_phone_white_18dp"
            app:fab_label="TẠO BẰNG SỐ ĐIỆN THOẠI"
            style="@style/MenuButtonsStyleBlue" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/map_new_repair"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mode_edit_white_18dp"
            app:fab_label="TẠO CỬA HÀNG"
            style="@style/MenuButtonsStyleBlue" />

    </com.github.clans.fab.FloatingActionMenu>

    <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
    <!--        android:id="@+id/map_current_location"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginRight="@dimen/_15sdp"-->
    <!--        android:layout_marginBottom="@dimen/_40sdp"-->
    <!--        app:srcCompat="@drawable/ic_my_location_black_18dp"-->
    <!--        app:fab_size="normal"-->
    <!--        app:layout_anchor="@id/map_bottom_sheet"-->
    <!--        app:layout_anchorGravity="top|end"-->
    <!--        app:backgroundTint="@color/colorWhite"/>-->

    <androidx.cardview.widget.CardView
        android:id="@+id/map_current_location"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardMaxElevation="@dimen/_10sdp"
        app:layout_anchor="@id/map_bottom_sheet"
        app:layout_anchorGravity="top|end">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/font_awesome"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/icon_location"
            android:textColor="@color/black_text_color"
            android:gravity="center"
            android:textSize="@dimen/_16sdp" />
    </androidx.cardview.widget.CardView>


    <RadioGroup
        android:checkedButton="@+id/map_filter_all"
        android:id="@+id/map_filter"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/pink_out_line"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/_10sdp">

        <RadioButton
            android:id="@+id/map_filter_all"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/toggle_widget_background_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Tất cả"
            android:textColor="@drawable/text_white_selected"
            android:textSize="@dimen/_10sdp" />

        <RadioButton
            android:id="@+id/map_filter_interested"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="0.2dp"
            android:layout_marginRight="0.2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background_center"
            android:button="@null"
            android:gravity="center"
            android:text="Quan tâm"
            android:textColor="@drawable/text_white_selected"
            android:textSize="@dimen/_10sdp" />

        <RadioButton
            android:id="@+id/map_filter_ordered"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background_right"
            android:button="@null"
            android:gravity="center"
            android:text="Đã mua"
            android:textColor="@drawable/text_white_selected"
            android:textSize="@dimen/_10sdp" />

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/map_search_bạckground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:focusable="true"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/map_rvsearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="60dp"
                android:layout_marginLeft="8dp"
                android:layout_margin="8dp" />

        </RelativeLayout>

        <include layout="@layout/view_custom_search" />

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/map_loading"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/search_top_bar"
            android:indeterminate="true"
            app:spb_sections_count="4"
            app:spb_color="@color/colorBlue"
            app:spb_speed="2.0"
            app:spb_stroke_width="4dp"
            app:spb_stroke_separator_length="4dp"
            app:spb_reversed="false"
            app:spb_mirror_mode="true"
            app:spb_progressiveStart_activated="false"
            app:spb_progressiveStart_speed="1.5"
            app:spb_progressiveStop_speed="3.4"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="-14dp" />

        <TextView
            android:id="@+id/map_waiting_list_text"
            android:fontFamily="@font/font_awesome"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:minWidth="@dimen/_40sdp"
            android:background="@drawable/btn_round_white_border_grey"
            android:text="@string/icon_thumbtack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_below="@+id/search_top_bar"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp" />


        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/map_reload"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="@string/icon_reload"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/search_top_bar"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/map_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:orientation="vertical"
        android:clickable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/bg_2topcorner8_gradientgrey"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginBottom="-4dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <View
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@drawable/bg_corner5_lighgrey"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_2sdp" />

                <LinearLayout
                    android:id="@+id/map_bottom_sheet_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?selectableItemBackgroundBorderless">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/map_detail_shopname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cua hang sua xe"
                            android:textAllCaps="true"
                            android:textColor="@color/black_text_color"
                            android:textSize="@dimen/_14sdp"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/map_detail_tempbill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/_14sdp"
                            android:background="@drawable/btn_confirm_orange"
                            android:text="1 hóa đơn chưa giao"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:visibility="gone" />

                        <ProgressBar
                            android:id="@+id/map_loading_customer"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/colorBlue"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_2sdp">

                        <TextView
                            android:id="@+id/map_detail_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="@dimen/_200sdp"
                            android:textColor="@color/black_text_color_hint"
                            android:textSize="@dimen/_10sdp"
                            android:singleLine="true" />

                        <TextView
                            android:fontFamily="@font/font_awesome"
                            android:id="@+id/map_detail_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="m"
                            android:textColor="@color/black_text_color_hint"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp" />


                    </LinearLayout>

                    <TextView
                        android:fontFamily="@font/font_awesome"
                        android:id="@+id/map_detail_checkin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="m"
                        android:textColor="@color/black_text_color_hint"
                        android:textSize="@dimen/_9sdp"
                        android:layout_marginTop="@dimen/_2sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_2sdp">

                        <TextView
                            android:fontFamily="@font/font_awesome"
                            android:id="@+id/map_detail_status_dot"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/icon_circle"
                            android:gravity="center"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/black_text_color_hint" />

                        <TextView
                            android:fontFamily="@font/font_awesome"
                            android:id="@+id/map_detail_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cua hang sua xe"
                            android:textColor="@color/black_text_color_hint"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center_vertical" />


                    </LinearLayout>


                </LinearLayout>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <wolve.dms.customviews.CButton
                            android:id="@+id/map_detail_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:iconText="@string/icon_direction"
                            app:text="Chỉ đường"
                            app:iconColor="@color/colorWhite"
                            app:textColor="@color/colorWhite"
                            app:backgroundLayout="@drawable/btn_round_blue" />

                        <wolve.dms.customviews.CButton
                            android:id="@+id/map_detail_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:iconText="@string/icon_plus"
                            app:text="DS Chờ"
                            app:iconColor="@color/colorBlue"
                            app:textColor="@color/black_text_color"
                            app:backgroundLayout="@drawable/btn_round_white_border_blue" />

                        <wolve.dms.customviews.CButton
                            android:id="@+id/map_detail_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:iconText="@string/icon_phone"
                            app:text="Gọi"
                            app:iconColor="@color/colorBlue"
                            app:textColor="@color/black_text_color"
                            app:backgroundLayout="@drawable/btn_round_white_border_blue" />

                        <wolve.dms.customviews.CButton
                            android:id="@+id/map_detail_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:iconText="@string/icon_share"
                            app:text="Chia sẻ"
                            app:iconColor="@color/colorBlue"
                            app:textColor="@color/black_text_color"
                            app:backgroundLayout="@drawable/btn_round_white_border_blue" />

                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
