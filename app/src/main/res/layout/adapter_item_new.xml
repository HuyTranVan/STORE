<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_new_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_none_white">

    <TextView
        android:id="@+id/item_new_image"
        android:fontFamily="@font/font_awesome"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/bg_oval_lightgrey"
        android:text="@string/icon_plus"
        android:gravity="center"
        android:textColor="@color/black_text_color_hint"
        android:textSize="@dimen/_12sdp"
        android:layout_margin="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/item_new_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textColor="@color/black_text_color_hint"
        android:textSize="@dimen/_12sdp"
        android:layout_toRightOf="@+id/item_new_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp" />


</RelativeLayout>