<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopcart_products_item_coparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_50sdp"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/shopcart_products_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="1"
        android:textSize="@dimen/_40sdp"
        android:textColor="#f1f1f1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/shopcart_products_item_quantity_group">

        <TextView
            android:id="@+id/shopcart_products_item_ribbon"
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/_2sdp" />

        <LinearLayout
            android:id="@+id/shopcart_products_item_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?selectableItemBackgroundBorderless"

            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/shopcart_products_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shopcart_products_item_quantity_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20,000"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_text_color"
                android:layout_marginTop="@dimen/_2sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_below="@+id/shopcart_products_item_parent"
                android:clickable="true">

                <TextView
                    android:fontFamily="@font/font_awesome"
                    android:id="@+id/shopcart_products_item_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_40sdp"
                    android:background="?selectableItemBackground"
                    android:text="@string/icon_copy"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black_text_color_hint"
                    android:gravity="center" />

                <TextView
                    android:fontFamily="@font/font_awesome"
                    android:id="@+id/shopcart_products_item_promotion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_40sdp"
                    android:background="?selectableItemBackground"
                    android:text="@string/icon_gift"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black_text_color_hint"
                    android:gravity="center" />

                <TextView
                    android:fontFamily="@font/font_awesome"
                    android:id="@+id/shopcart_products_item_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/_40sdp"
                    android:background="?selectableItemBackground"
                    android:text="@string/icon_delete"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black_text_color_hint"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/shopcart_products_item_quantity_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:gravity="center_vertical">

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/shopcart_products_item_sub"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/icon_minus"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black_text_color_hint"
            android:gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/shopcart_products_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:minWidth="@dimen/_25sdp"
            android:background="@drawable/btn_round_transparent_border_grey"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_14sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:singleLine="true" />

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/shopcart_products_item_plus"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/icon_plus"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black_text_color_hint"
            android:gravity="center"
            android:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrey"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp" />

</RelativeLayout>




