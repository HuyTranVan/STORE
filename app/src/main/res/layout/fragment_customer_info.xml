<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customer_info_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/customer_info_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/customer_info_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_60sdp"
            android:paddingTop="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5sdp">

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:fontFamily="@font/font_awesome"-->
<!--                    android:text="@string/icon_car"-->
<!--                    android:textColor="@color/black_text_color_hint"-->
<!--                    android:textSize="@dimen/_18sdp"-->
<!--                    android:paddingLeft="@dimen/_5sdp"-->
<!--                    android:paddingRight="@dimen/_10sdp"-->
<!--                    android:gravity="bottom"/>-->

                <com.lubsolution.store.customviews.CDropdown
                    android:id="@+id/customer_brand"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_5sdp" />

                <com.lubsolution.store.customviews.CDropdown
                    android:id="@+id/customer_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:backgroundDropdown="@drawable/bg_corner5_transparent_border_darkblue"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/customer_info_plate_show"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/bg_corner5_white_border_grey"
                    android:textSize="@dimen/_12sdp"
                    android:text="XX\nXXXX"
                    android:textColor="@color/black_text_color_hint"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:gravity="center"/>


                <EditText
                    android:id="@+id/customer_info_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30sdp"
                    android:background="@color/float_transparent"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black_text_color"
                    android:textColorHint="@color/black_text_color_hint"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/customer_info_plate_show"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/custom_cursor" />

                <TextView
                    android:id="@+id/customer_info_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_awesome"
                    android:text="@string/icon_warning_circle"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorRed"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/colorGrey"
                android:layout_marginLeft="@dimen/_60sdp"/>



            <com.lubsolution.store.customviews.CInputForm
                android:id="@+id/customer_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                app:textHint="Tên khách hàng"
                app:iconColor="@color/black_text_color_hint"
                app:iconText="@string/icon_username" />

            <com.lubsolution.store.customviews.CInputForm
                android:id="@+id/customer_info_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                app:textHint="Số điện thoại"
                app:iconText="@string/icon_phone"
                app:iconColor="@color/black_text_color_hint" />

            <com.lubsolution.store.customviews.CInputForm
                android:id="@+id/customer_info_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background="?selectableItemBackground"
                app:iconText="@string/icon_address"
                app:multiLine="true"
                app:textColor="@drawable/text_white_selected"
                app:textHint="Quận / Huyện"
                app:iconColor="@color/black_text_color_hint" />

            <com.lubsolution.store.customviews.CInputForm
                android:id="@+id/customer_info_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background="?selectableItemBackground"
                app:iconText="@string/icon_district"
                app:multiLine="true"
                app:textColor="@drawable/text_white_selected"
                app:textHint="Tỉnh / Thành phố"
                app:iconColor="@color/black_text_color_hint" />

            <com.lubsolution.store.customviews.CInputForm
                android:id="@+id/customer_info_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background="?selectableItemBackground"
                app:iconText="@string/icon_comment"
                app:multiLine="true"
                app:textColor="@drawable/text_white_selected"
                app:textHint="Ghi chú quan trọng"
                app:iconColor="@color/black_text_color_hint"
                app:hideBottomLine="true" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>





