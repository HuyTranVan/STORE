<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/depot_item_parent"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_none_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/depot_item_right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <TextView
                android:id="@+id/depot_item_depottype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_awesome"
                android:text="@string/icon_home"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp" />

            <TextView
                android:id="@+id/depot_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/depot_item_number_temp_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_white_border_orange"
                android:text="2 nhap kho"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp" />
        </LinearLayout>


        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/depot_item_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default"
            android:textColor="@color/black_text_color_hint"
            android:textSize="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/depot_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/depot_item_depotreturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/icon_logout"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:rotation="180"
            android:visibility="gone" />

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/depot_item_depotinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/icon_info"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>


    <View
        android:id="@+id/depot_item_seperateline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#0d000000"
        android:layout_alignParentBottom="true" />

</RelativeLayout>