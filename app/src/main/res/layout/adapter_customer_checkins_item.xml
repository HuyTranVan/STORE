<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkins_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/checkins_item_dot_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/checkins_item_number"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/bg_oval_blue"
            android:textColor="@color/colorBlue"
            android:layout_marginLeft="@dimen/_5sdp" />

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/checkins_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Default"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/checkins_item_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:textColor="@color/black_text_color_hint"
            android:textSize="@dimen/_8sdp"
            android:paddingLeft="@dimen/_10sdp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/checkins_item_content_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_20sdp"
        android:orientation="horizontal">

        <!--        <View-->
        <!--            android:id="@+id/checkins_item_under"-->
        <!--            android:layout_width="1dip"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:background="#e5e5e5"-->
        <!--            android:layout_marginLeft="@dimen/_10sdp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/checkins_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp" />

            <TextView
                android:id="@+id/checkins_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_awesome"
                android:layout_gravity="right"
                android:text="@string/icon_star"
                android:layout_marginRight="@dimen/_8sdp"
                android:textColor="@color/orange_disable"
                android:textSize="@dimen/_10sdp" />

            <View
                android:id="@+id/checkins_item_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/colorLightGrey" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
