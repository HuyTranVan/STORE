<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_text_color_hint"
    android:clickable="true"
    android:keepScreenOn="true"
    android:id="@+id/print_bill_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/print_bill_content_parent"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_centerInParent="true"
        android:layout_above="@+id/print_bill_bottom"
        android:paddingBottom="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/print_bill_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <ImageView
                android:id="@+id/print_bill_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/lub_logo_red"
                android:layout_marginBottom="@dimen/_10sdp" />

            <TextView
                android:id="@+id/print_bill_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Công ty"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/print_bill_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia chi"
                android:textSize="@dimen/_12sdp"
                android:gravity="center" />

            <TextView
                android:id="@+id/print_bill_hotline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotline"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/print_bill_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website "
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/print_bill_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOA DON (in lại)"
                android:gravity="center"
                android:textSize="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cửa hàng"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_2sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Liên hệ"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_2sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_2sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_2sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bán hàng"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/print_bill_deliver_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giao hàng"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/print_bill_shopname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website "
                        android:textAllCaps="true"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_2sdp" />

                    <TextView
                        android:id="@+id/print_bill_customername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website "
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_2sdp" />

                    <TextView
                        android:id="@+id/print_bill_customeraddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website "
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_2sdp" />

                    <TextView
                        android:id="@+id/print_bill_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website "
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_2sdp" />

                    <TextView
                        android:id="@+id/print_bill_employee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website "
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/print_bill_deliver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website "
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0d000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Sản phẩm"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_2sdp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="SL"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/_2sdp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Đ.Giá"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/_2sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="x1000 đ"
                        android:textSize="@dimen/_8sdp"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/_2sdp" />

                </LinearLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="T.Tiền"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/_2sdp" />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#0d000000"-->
            <!--/>-->

            <View
                android:id="@+id/print_bill_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0d000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/print_bill_bills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:id="@+id/print_bill_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0d000000" />

            <TextView
                android:id="@+id/print_bill_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tong "
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black_text_color"
                android:gravity="right|center_vertical"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/print_bill_rvdebt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/print_bill_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0d000000"
                android:layout_marginTop="@dimen/_5sdp" />


            <LinearLayout
                android:id="@+id/print_bill_total_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    android:id="@+id/print_bill_total_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Tổng:"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black_text_color"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/print_bill_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Tong "
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black_text_color"
                    android:gravity="right|center_vertical" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0d000000" />


            <LinearLayout
                android:id="@+id/print_bill_paid_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Trả:"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black_text_color"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/print_bill_paid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black_text_color"
                    android:gravity="right|center_vertical" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0d000000" />


            <LinearLayout
                android:id="@+id/print_bill_remain_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Còn lại:"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black_text_color"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/print_bill_remain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Tong "
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black_text_color"
                    android:gravity="right|center_vertical" />

            </LinearLayout>

            <View
                android:id="@+id/print_bill_line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0d000000" />


            <LinearLayout
                android:id="@+id/print_bill_signature_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_corner_stroke_grey"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone">


                <TextView
                    android:id="@+id/print_bill_employee_sign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/_10sdp"
                    android:text="NV:"
                    android:gravity="bottom"
                    android:layout_marginLeft="@dimen/_5sdp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#0d000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/_10sdp"
                    android:text="KH:"
                    android:gravity="bottom"
                    android:layout_marginLeft="@dimen/_5sdp" />

            </LinearLayout>

            <TextView
                android:id="@+id/print_bill_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp" />

            <TextView
                android:id="@+id/print_bill_orderphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="@dimen/_18sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <ImageView
                android:id="@+id/print_bill_qrphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_arrow_back_black_18dp"
        android:padding="@dimen/_8sdp"
        android:background="?selectableItemBackground" />

    <LinearLayout
        android:id="@+id/print_bill_bottom"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/black_text_color_hint"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/print_bill_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:background="?selectableItemBackground">

            <TextView
                android:id="@+id/print_bill_bottom_maintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IN HÓA ĐƠN"
                android:textAllCaps="true"
                android:textColor="@color/white_text_color"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/print_bill_bottom_secondtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/print_bill_bottom_maintext"
                android:text="Chưa kết nối máy in!!"
                android:textColor="@color/white_text_color_hint"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_text_color_hint"
            android:layout_margin="@dimen/_2sdp" />

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/print_bill_bottom_printerselect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="?selectableItemBackground"
            android:text="@string/icon_down"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:rotation="180" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_text_color_hint"
            android:layout_margin="@dimen/_2sdp" />

        <TextView
            android:id="@+id/print_bill_bottom_printersize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="?selectableItemBackground"
            android:text="57mm"
            android:gravity="center"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_text_color_hint"
            android:layout_margin="@dimen/_2sdp" />

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/print_bill_bottom_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="?selectableItemBackground"
            android:text="@string/icon_share"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/_16sdp"
            android:gravity="center" />
    </LinearLayout>


</RelativeLayout>