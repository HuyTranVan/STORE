<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/activity_bill_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <ImageView
                android:id="@+id/activity_bill_logoimage"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_80sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/add_image"
                android:background="@drawable/btn_none_white" />

            <View
                android:layout_width="@dimen/_150sdp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black_text_color_hint" />

            <TextView
                android:id="@+id/activity_bill_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:text="HÓA ĐƠN"
                android:textColor="@color/black"
                android:textSize="@dimen/_24sdp" />

            <LinearLayout
                android:layout_width="@dimen/_296sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="Tên CH: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/dialog_bill_shopname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="SUA XE HOANG ANH "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="K.hàng: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/dialog_bill_customer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="SUA XE HOANG ANH "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="SĐT: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/dialog_bill_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="SUA XE HOANG ANH "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="Địa chỉ: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/dialog_bill_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="SUA XE HOANG ANH\nSUA XE HOANG ANH "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="T.gian: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/dialog_bill_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="SUA XE HOANG ANH "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="N.viên: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/dialog_bill_sale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="SUA XE HOANG ANH "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dialog_bill_rvbill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_none_white_border_grey"
                android:layout_marginTop="-4dp"

                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_none_white_border_grey"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TỔNG TIỀN"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/dialog_bill_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10,000,000"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black"
                android:layout_marginTop="0.5dp" />


            <TextView
                android:id="@+id/activity_bill_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HẸN GẶP LẠI QUÝ KHÁCH!"
                android:gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black" />

            <TextView
                android:id="@+id/activity_bill_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.wolver.vn"
                android:gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>








