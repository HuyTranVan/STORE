<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_data_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:fontFamily="@font/font_awesome"
        android:id="@+id/input_data_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:text="@string/icon_product_group"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/colorBlueTransparent"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:gravity="center" />


    <EditText
        android:id="@+id/input_data_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_35sdp"
        android:background="@color/float_transparent"
        android:focusableInTouchMode="true"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black_text_color"
        android:textColorHint="@color/black_text_color_hint"
        android:inputType="textCapSentences"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/input_data_icon"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/input_data_dropdown"
        android:textCursorDrawable="@drawable/custom_cursor" />


    <TextView
        android:id="@+id/input_data_dropdown"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:fontFamily="@font/font_awesome"
        android:background="?selectableItemBackgroundBorderless"
        android:text="@string/icon_down"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black_text_color_hint"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />


    <View
        android:id="@+id/input_data_underline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/colorGrey"
        android:layout_below="@+id/input_data_content" />

</RelativeLayout>