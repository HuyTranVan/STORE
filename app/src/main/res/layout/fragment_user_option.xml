<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_option_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true">


    <RelativeLayout
        android:id="@+id/user_option_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_img_header">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_black_18dp"
            android:padding="@dimen/_8sdp"
            android:background="?selectableItemBackground" />

        <TextView
            android:id="@+id/user_option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thông tin tài khoản"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:textColor="@color/black_text_color" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/user_option_header">

        <RelativeLayout
            android:id="@+id/user_option_user_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:background="?selectableItemBackground"
            android:layout_marginBottom="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_option_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/ic_user"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                app:civ_border_width="5dip"
                app:civ_border_overlay="true"
                app:civ_fill_color="@color/colorWhite"
                app:civ_border_color="@color/colorLightGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/user_option_image">

                <TextView
                    android:id="@+id/user_option_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textColor="@color/black_text_color"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/user_option_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx"
                    android:textSize="@dimen/_8sdp" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_awesome"
                android:text="@string/icon_next"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/user_option_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_awesome"
            android:background="?selectableItemBackground"
            android:text="@string/icon_username"
            android:textSize="@dimen/_12sdp"
            android:minHeight="@dimen/_40sdp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_20sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/colorLightGrey"
            android:layout_marginLeft="@dimen/_10sdp" />


        <TextView
            android:id="@+id/user_option_change_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_awesome"
            android:background="?selectableItemBackground"
            android:text="@string/icon_username"
            android:textSize="@dimen/_12sdp"
            android:minHeight="@dimen/_40sdp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_20sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/colorLightGrey"
            android:layout_marginLeft="@dimen/_10sdp" />

        <TextView
            android:id="@+id/user_option_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_awesome"
            android:background="?selectableItemBackground"
            android:text="@string/icon_logout"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorRedTransparent"
            android:minHeight="@dimen/_40sdp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_20sdp" />
    </LinearLayout>


</RelativeLayout>