    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorRed" />
            <corners android:topLeftRadius="0dp" android:topRightRadius="@dimen/_4sdp" android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/_4sdp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorRed" />
            <corners android:topLeftRadius="0dp" android:topRightRadius="@dimen/_4sdp" android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/_4sdp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite" />
            <corners android:topLeftRadius="0dp" android:topRightRadius="@dimen/_3sdp" android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/_3sdp" />
