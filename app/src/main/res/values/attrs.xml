<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CTextViewDefault">
        <attr name="customFont" format="string" />
        <attr name="textWhite" format="boolean" />
        <attr name="setActive" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CInputForm">
        <attr name="iconColor" format="integer" />
        <attr name="iconSize" format="reference|dimension" />
        <attr name="iconText" format="string" />
        <attr name="textSize" format="reference|dimension" />
        <attr name="textColor" format="integer" />
        <attr name="text" format="string" />
        <attr name="titleSize" format="reference|dimension" />
        <attr name="titleColor" format="integer" />
        <attr name="titleText" format="string" />
        <attr name="multiLine" format="boolean" />
        <attr name="textColorHint" format="integer" />
        <attr name="textHint" format="string" />
        <attr name="android:inputType" />
        <attr name="isDropdown" format="boolean" />
        <attr name="hideBottomLine" format="boolean" />
        <attr name="backgroundIcon" format="reference|color" />
        <attr name="backgroundLayout" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="CDropdown">
        <attr name="iconDropdownColor" format="integer" />
        <attr name="iconDropdownSize" format="reference|dimension" />
        <attr name="iconDropdownText" format="string" />
        <attr name="textDropdownSize" format="reference|dimension" />
        <attr name="textDropdownColor" format="integer" />
        <attr name="textDropdown" format="string" />
        <attr name="android:inputType" />
        <attr name="backgroundDropdown" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="InputRegister">
        <attr name="customIconText" format="integer" />
        <attr name="iconsSize" format="integer" />
        <attr name="paddingIcon" format="integer" />
        <attr name="iconsColor" format="integer" />
        <attr name="paddingUnderLine" format="integer" />
        <attr name="colorUnderLine" format="integer" />
        <attr name="weightUnderLine" format="integer" />
        <attr name="android:hint" />
        <attr name="android:textColor" />
        <attr name="android:textColorHint" />
    </declare-styleable>

    <declare-styleable name="MaxHeightLinearLayout">
        <attr name="maxHeightDp" format="integer" />
    </declare-styleable>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragFromEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="sb_shadow_radius" format="reference|dimension" />
        <attr name="sb_shadow_offset" format="reference|dimension" />
        <attr name="sb_shadow_color" format="reference|color" />
        <attr name="sb_uncheck_color" format="reference|color" />
        <attr name="sb_checked_color" format="reference|color" />

        <attr name="sb_border_width" format="reference|dimension" />
        <attr name="sb_checkline_color" format="reference|color" />
        <attr name="sb_checkline_width" format="reference|dimension" />
        <attr name="sb_uncheckcircle_color" format="reference|color" />
        <attr name="sb_uncheckcircle_width" format="reference|dimension" />
        <attr name="sb_uncheckcircle_radius" format="reference|dimension" />

        <attr name="sb_checked" format="reference|boolean" />
        <attr name="sb_shadow_effect" format="reference|boolean" />
        <attr name="sb_effect_duration" format="reference|integer" />
        <attr name="sb_button_color" format="reference|color" />
        <attr name="sb_show_indicator" format="reference|boolean" />
        <attr name="sb_background" format="reference|color" />
        <attr name="sb_enable_effect" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="SimpleSearchView">
        <attr name="backIconAlpha" format="dimension" />
        <attr name="iconsAlpha" format="dimension" />

        <attr name="backIconTint" format="color" />
        <attr name="iconsTint" format="color" />

        <attr name="cursorColor" format="color" />
        <attr name="hintColor" format="color" />

        <attr name="searchBackground" format="reference|color" />

        <attr name="searchBackIcon" format="reference" />
        <attr name="searchClearIcon" format="reference" />
        <attr name="searchVoiceIcon" format="reference" />

        <attr name="voiceSearch" format="boolean" />

        <attr name="voiceSearchPrompt" format="string" />

        <attr name="android:hint" format="string" />
        <attr name="android:inputType" />
        <attr name="android:textColor" format="color" />

        <attr name="type" format="enum">
            <enum name="bar" value="0" />
            <enum name="card" value="1" />
        </attr>
    </declare-styleable>

</resources>